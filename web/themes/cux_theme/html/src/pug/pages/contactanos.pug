extends ./../templates/template.pug
append css
  link(rel="stylesheet", href="./../css/c-ultimas-notas.css")

  link(rel="stylesheet", href="./../css/contactanos.css")


append main
  div.c-contactanos
    section.c-banner-titulo.position-relative
      .img-fondo.h-100
        img(src="../img/blog/image-blog.jpg", alt="img" )
      .position-absolute.titulo.d-flex.align-items-center.w-100.h-100
        .container
          h1.text-center Contactanos
    div.offset-md-2.col-md-8
      h2.text-center Te respondemos a la brevedad
      div.row
        div.col-md-6.c-contacto__mapa
          span <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1950.7115132272643!2d-77.05768630784232!3d-12.083166033551835!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c901da2a1bb7%3A0x9d58f9d40a4810ac!2sJir%C3%B3n%20Rio%20de%20Janeiro%20339%2C%20Jes%C3%BAs%20Mar%C3%ADa%2015072!5e0!3m2!1ses-419!2spe!4v1583166258090!5m2!1ses-419!2spe" width="100%" height="200"  frameborder="0" style="border:0;" allowfullscreen=""></iframe>
          div.d-flex.pb-1.pt-3
            img(src="../img/home/lugar.svg", alt="")
            a(href="https://www.google.com/maps?ll=-12.08308,-77.05681&z=16&t=h&hl=es-419&gl=PE&mapclient=embed&cid=6478281943564422604").mb-0.pl-2 Jirón Rio de janeiro 339 <br> Jesus Maria-Lima-Peru
          div.d-flex.pb-1
            img(src="../img/home/telefono.svg", alt="")
            a(href="tel:+51 9999999999 ").mb-0.pl-2 +51 9999999999
          div.d-flex.pb-1
            img(src="../img/home/correo.svg", alt="")
            a(href="mailto:hola@sanitech.com.pe").mb-0.pl-2 hola@sanitech.com.pe
        div.col-md-6
          form(action="")
            div.form-item
              input.form-control(type="text" name="nombre" required placeholder="Nombre")
            div.form-item
              input.form-control(type="text" name="Email" required placeholder="Email")
            div.form-item
              input.form-control(type="text" name="telefono" required placeholder="Teléfono")
            div.form-item.textarea
              textarea.form-control(rows="5" name="mensaje" placeholder="Quiero saber mas sobre...")
            div.form-item
              input.form-submit.btn-block.text-uppercase(type="submit")
    


