{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header: Items for the header region.
 * - page.primary_menu: Items for the primary menu region.
 * - page.secondary_menu: Items for the secondary menu region.
 * - page.highlighted: Items for the highlighted content region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - page.sidebar_first: Items for the first sidebar.
 * - page.sidebar_second: Items for the second sidebar.
 * - page.footer: Items for the footer region.
 * - page.breadcrumb: Items for the breadcrumb region.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

{% set fecha = "now"|date("Ymd") %}

{# HEADER #}
<header class="c-header grupo-romero" id="headerPrincipal"
        style="background: url({{ empresa_bg_header }}) repeat-x !important">
  <div class="c-header__top header--gruporomero py-3 text-white">
    <div class="container d-flex justify-content-between align-items-center">
      {{ page.logo }}
      <div class="d-flex align-items-center">
        <div class="c-header__boletin">Boletín informativo</div>
        <div class="c-header__toggle navbar navbar-dark navbar-expand-lg d-lg-none">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                  aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"><span
              class="navbar-toggler-icon"></span></button>
        </div>
      </div>
    </div>
  </div>
  <div class="c-header__fecha bg-secondary text-white py-2">
    <div class="container d-flex flex-wrap justify-content-between">
      <div class="fecha">
        {# Lunes, 24 de junio de 2019 #}
        {%- set fecha_dia_texto = 'now'|date('l')|t -%}
        {%- set fecha_dia = 'now'|date('d') -%}
        {%- set fecha_mes = 'now'|date('F')|t -%}
        {%- set fecha_anio = 'now'|date('Y') -%}
        {{ fecha_dia_texto }}, {{ fecha_dia }} de {{ fecha_mes }} de {{ fecha_anio }}
      </div>
    </div>
  </div>
  <div class="c-header__menu c-header__menu--empresa">
    <div class="container">
      <nav class="navbar navbar-light navbar-expand-lg p-0">
        <div class="collapse navbar-collapse" id="navbarNav">
          {{ page.menu }}
        </div>
      </nav>
    </div>
  </div>
  <div class="c-header__logos">
    <div class="container">
      <div class="owl-carousel owl-nav-lados owl-nav-lados--mini owl-theme" id="owl-header-empresas">
        <a class="c-header__logos-empresa semaforo-verde" href="/centenario">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/centenario.png" alt="Centenario"
               title="Centenario">
        </a>
        <a class="c-header__logos-empresa semaforo-verde" href="/grupo-primax">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/primax.png" alt="Primax" title="Primax">
        </a>
        <a class="c-header__logos-empresa semaforo-verde" href="/grupo-palmas">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/palmas.png" alt="Palmas" title="Palmas">
        </a>
        <a class="c-header__logos-empresa semaforo-ambar" href="/grupo-tramarsa">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/grupo-tramarsa.png" alt="Grupo Tramarsa"
               title="Grupo Tramarsa">
        </a>
        <a class="c-header__logos-empresa semaforo-ambar" href="/cana-brava">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/cana-brava.png" alt="Caña Brava"
               title="Caña Brava">
        </a>
        <a class="c-header__logos-empresa semaforo-verde" href="/fundacion-romero">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/fundacion-romero.png" alt="Fundación Romero"
               title="Fundación Romero">
        </a>
        <a class="c-header__logos-empresa semaforo-verde" href="/pesquera-centinela">
          <img src="/themes/cux_theme/html/public/img/logo-empresas/centinela.png" alt="Centinela" title="Centinela">
        </a>
      </div>
    </div>
  </div>
</header>


{# MAIN #}
<main>
  {{ page.content }}

  {#  noticias grupo romero #}
  <section>
    <div class="c-titulo-seccion text-center">
      <div class="container">
        <div class="container-seccion-titulo">
          <h2>Noticias del Grupo Romero</h2>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row row-3-big">
        {{ drupal_view('empresa_content_unique', 'noticias_grupo_romero', fecha) }}
      </div>
    </div>
    {% if drupal_view_result('empresa_content_unique', 'noticias_grupo_romero', fecha) is not empty %}
      <div class="container">
        <div class="text-center py-7"><a class="c-boton-naranja btn btn-primary" href="/noticias">Ver más</a>
        </div>
      </div>
    {% endif %}
  </section>

  {#  portadas del día #}
  <section class="c-portadas py-8">
    <div class="container">
      <div class="c-portadas__titulo pb-7 text-center d-flex justify-content-center align-items-center">
        <h2 class="m-0 mt-4">Portadas&nbsp;<span>del día</span></h2>
        <div class="pl-2"><img src="/themes/cux_theme/html/img/icons/ico-portadas.png"></div>
      </div>
    </div>
    <div class="container">
      <div class="tab-content text-white">
        <div class="owl-carousel owl-nav-lados owl-portadasDelDia">
          {{ drupal_view('home_v2', 'portadas', fecha_hoy) }}
        </div>
      </div>
    </div>
  </section>

  {#  noticias de interés #}
  <section>
    <div class="c-titulo-seccion text-center">
      <div class="container">
        <div class="container-seccion-titulo">
          <h2>Noticias de interés</h2>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row row-3-big">
        {{ drupal_view('empresa_content_unique_topic', 'noticias_de_interes', fecha) }}
      </div>
    </div>
    {% if drupal_view_result('empresa_content_unique_topic', 'noticias_de_interes', fecha) is not empty %}
      <div class="container">
        <div class="text-center pt-7 pb-4"><a class="c-boton-naranja btn btn-primary" href="/interes">Ver más</a>
        </div>
      </div>
    {% endif %}
  </section>

  {#  noticias de actualidad #}
  <section>
    <div class="c-titulo-seccion text-center">
      <div class="container">
        <div class="container-seccion-titulo">
          <h2>Noticias de actualidad</h2>
        </div>
      </div>
    </div>
    {% set actualidad_total = 0 %}
    <div class="container">
      <div class="row hide-categoria">
        <div class="col-md-4 grupo-articulos">
          {# política #}
          <div class="c-categoria position-relative z-index-3 u-width-fc mb-2">
            <a href="http://boletingr.lndo.site:8000/taxonomy/term/4534" class="no-link">Política</a>
          </div>
          {{ drupal_view('home_v2', 'noticias_actualidad', 4536, fecha) }}
          {% if drupal_view_result('home_v2', 'noticias_actualidad', 4536, fecha) is not empty %}
            {% set actualidad_total = 1 %}
          {% endif %}
        </div>
        <div class="col-md-4 grupo-articulos">
          {# economía #}
          <div class="c-categoria position-relative z-index-3 u-width-fc mb-2">
            <a href="http://boletingr.lndo.site:8000/taxonomy/term/4534" class="no-link">Economía</a>
          </div>
          {{ drupal_view('home_v2', 'noticias_actualidad', 4535, fecha) }}
          {% if drupal_view_result('home_v2', 'noticias_actualidad', 4535, fecha) is not empty %}
            {% set actualidad_total = 1 %}
          {% endif %}
        </div>
        <div class="col-md-4 grupo-articulos">
          {# laboral #}
          <div class="c-categoria position-relative z-index-3 u-width-fc mb-2">
            <a href="http://boletingr.lndo.site:8000/taxonomy/term/4534" class="no-link">Laboral</a>
          </div>
          {{ drupal_view('home_v2', 'noticias_actualidad', 4534, fecha) }}
          {% if drupal_view_result('home_v2', 'noticias_actualidad', 4534, fecha) is not empty %}
            {% set actualidad_total = 1 %}
          {% endif %}
        </div>
      </div>
    </div>
    {% if actualidad_total == 1 %}
      <div class="container">
        <div class="text-center py-7"><a class="c-boton-naranja btn btn-primary" href="/actualidad">Ver más</a>
        </div>
      </div>
    {% endif %}
  </section>

</main>

{# FOOTER #}
{% include '@cux_theme/includes/footer.html.twig' %}
