{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{% set paragraph_parent = paragraph.getParentEntity() %}
{% set fecha_noticia = paragraph_parent.field_index_date.value|date('Ymd', 'Pacific/Honolulu') %}
{% set cod = paragraph_parent.field_id.value %}
{% set feedid = paragraph_parent.field_feedid_api.target_id %}


<div class="recurso {{ fecha_noticia }}">

  {# imágenes #}
  {% if '.jpg' in content.field_recurso_file|render|render %}

    {% if feedid == 4659 %}
      <img class="img-fluid" alt="portada"
           src="/mentions/{{ fecha_noticia }}/FullPage/{{ content.field_recurso_filefullpage|field_value }}">
    {% else %}
      {% if content.field_recurso_filefullpage['#items'].getValue() %}
        {# si hay archivo full page #}
        {% if path_fullpage %}
          <a href="{{ path_fullpage }}" data-fancybox="gallery" class="d-flex align-items-center ico-zoom 000">
            <img src="{{ path_file }}">
          </a>
        {% else %}
          <a href="/mentions/{{ fecha_noticia }}/FullPage/{{ content.field_recurso_filefullpage|field_value }}"
             data-fancybox="gallery" class="d-flex align-items-center ico-zoom 000">
            <img src="/mentions/{{ fecha_noticia }}/Clips/{{ content.field_recurso_file|field_value }}">
          </a>
        {% endif %}
        {#        <div class="float-left d-none">#}
        {#          <a href="https://cms.imedia.pe/get-mention-pdf-version/mention/{{ cod }}" download="imagenes"#}
        {#             class="btn btn-info btn-sm btn-download-img border-0"#}
        {#             download="{{ content.field_recurso_filefullpage|field_value }}">Descargar</a>#}
        {#        </div>#}
      {% else %}
        {# si sólo hay archivo file #}
        {% if path_file %}
          <a href="{{ path_file }}" data-fancybox="gallery" class="d-flex align-items-center ico-zoom">
            <img src="{{ path_file }}">
          </a>
        {% else %}
          <a href="/mentions/{{ fecha_noticia }}/Clips/{{ content.field_recurso_file|field_value }}"
             data-fancybox="gallery"
             class="d-flex align-items-center ico-zoom">
            <img src="/mentions/{{ fecha_noticia }}/Clips/{{ content.field_recurso_file|field_value }}">
          </a>
        {% endif %}
        {#        <div class="float-left d-none">#}
        {#          <a href="https://cms.imedia.pe/get-mention-pdf-version/mention/{{ cod }}" download="imagenes"#}
        {#             class="btn btn-info btn-sm btn-download-img border-0"#}
        {#             download="{{ content.field_recurso_file|field_value }}">Descargar</a>#}
        {#        </div>#}
      {% endif %}
    {% endif %}

  {% endif %}


  {# audio #}
  {% if '.mp3' in content.field_recurso_file|render|render %}
    <audio controls src="{{ path_multimedia }}">
      <source src="{{ path_multimedia }}" type="audio/mpeg">
    </audio>
  {% endif %}


  {# video #}
  {% if '.mp4' in content.field_recurso_file|render|render %}
    <video width="100%" height="350" src="{{ path_multimedia }}" preload controls>
      <source src="{{ path_multimedia }}" type="video/mp4">
    </video>
  {% endif %}
</div>
